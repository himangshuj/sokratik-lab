extends layouts/default
block content
    div(class="topbar",ng-hide="presentationMode")
        div(class="logo")
            a(ui-sref="home") sokratik
        div(class="menu")
            a(class="text-link" ui-sref="why") Why should I use sokratik?
            a(class="btn-small btn-hollow", ui-sref="login",ng-hide="logged || !homeScreen") LOG IN
            a(class="btn-small btn-hollow", href="/signout",ng-show="logged") LOG OUT
    div(class="full-sized", ui-view="root")
    div(class="audio")
        audio(ng-src="{{audioLocation}}",sokratik-audio-track)
        audio(src="//s3-ap-southeast-1.amazonaws.com/demo-answers-sg/Lantern/Happy-minute.mp3", sokratik-background-audio-track)
    div.sokratik-footer.color-purple.clearfix(ng-show="navigationMode")
        div.links
            a.footer-link(ui-sref="why") About
        div.social
            a.social-link(href='//www.facebook.com/pages/Sokratikedu/151574115037596')
                i.fa.fa-facebook(tooltip='Follow us on Facebook')
            a.social-link(href='//twitter.com/SokratikEdu')
                i.fa.fa-twitter(tooltip='Follow us on Twitter')
            a.social-link(href='//www.youtube.com/channel/UC4YEFs9oe2KQZIt_5Znqc6w')
                i.fa.fa-youtube(tooltip='Follow us on Youtube')

