extends layouts/default
block content
    div(class="topbar",ng-hide="presentationMode")
        div(class="logo")
            a(ui-sref="home") sokratik
        div(class="menu")
            a(class="btn btn-small btn-hollow btn-hollowb", ui-sref="login",ng-hide="logged") LOG IN
            a(class="btn btn-small btn-hollow btn-hollowb", href="/signout",ng-show="logged") LOG OUT
    div(ui-view="root")
    div(class="audio")
        audio(ng-src="{{audioLocation}}",sokratik-audio-track)
        audio(src="//s3-ap-southeast-1.amazonaws.com/demo-answers-sg/Lantern/Happy-minute.mp3", sokratik-background-audio-track)
    div(class="show-case",ng-show="navigationMode")
        div.color-purple.tile.tile-footer
            h1 Education
        div.color-green.tile.tile-footer
            h1 Story-telling
        div.color-yellow.tile.tile-footer
            h1 Explainer
        div.color-blue.tile.tile-footer
            h1 Active Learning
